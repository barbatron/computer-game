body
	font-family courier, monospace
	font-size 12px
	color gray
	width 100%

.left
	position fixed
	top 10px
	left 10px
	right 90%
	bottom 10px

.bitstack
	left: 5%
	.bit 
		border-radius 20px
		width 20px
		height 10px


.center
	position fixed
	top 10px
	left 10%
	right 20%
	bottom 10px

.right
	position fixed
	top 10px
	left 80%
	right 10px
	bottom 10px

.bit
	width 40px
	height 20px
	margin 3px
	border 1px solid gray
	box-sizing border-box
	background-color #F2B1C7
	box-shadow inset 1px 1px 1px #FFFFFF, inset -1px -1px 1px #777
	&.true
		background-color #B1F2C1 !important
	&.head
		box-shadow inset 1px 1px 1px #777, inset -1px -1px 1px #fff, 0px 0px 3px 3px rgba(128, 128, 255, .70)
	
.head
	box-shadow: 0px 0px 3px 3px rgba(128, 128, 255, .70);

.pos
	box-shadow: 0px 0px 3px 3px rgba(48, 255, 187, .70);

.frame
	background-color rgba(0, 0, 0, 0.1)
	opacity: 0.7
	margin: 5px
	padding 0px 5px 10px 5px
	&.editing
		background-color rgba(0, 0, 0, 0.2)
		opacity: 1.0
	.name
		font-weight bold

.fu
	cursor pointer
	box-shadow inset 1px 1px 1px #FFFFFF, inset -1px -1px 1px #777, 0px 0px 2px 2px rgba(0, 0, 0, .10)
	background-color #e1e1e1	
	height 20px
	margin-bottom 5px
	border-radius 3px
	line-height 15px
	padding-left 3px
	&.head
		box-shadow inset 1px 1px 1px #FFFFFF, inset -1px -1px 1px #777, 0px 0px 3px 3px rgba(128, 128, 255, .70)
	&:hover
		box-shadow inset 1px 1px 1px #777, inset -1px -1px 1px #fff, 0px 0px 3px 3px rgba(0, 0, 0, .10)
	.delete
		float right
		margin-right 5px
		margin-top 4px
		box-shadow inset 1px 1px 1px #FFFFFF, inset -1px -1px 1px #777, 0px 0px 2px 2px rgba(0, 0, 0, .10)
		padding 0 3px 0 3px
		line-height 12px
		&:hover
			box-shadow inset 1px 1px 1px #777, inset -1px -1px 1px #fff, 0px 0px 3px 3px rgba(0, 0, 0, .10)
		&.wp
			display none
	.love
		float left
		margin-left 5px
		margin-top 4px
		box-shadow inset 1px 1px 1px #FFFFFF, inset -1px -1px 1px #777, 0px 0px 2px 2px rgba(0, 0, 0, .10)
		padding 0 3px 0 3px
		line-height 12px
		&:hover
			box-shadow inset 1px 1px 1px #777, inset -1px -1px 1px #fff, 0px 0px 3px 3px rgba(0, 0, 0, .10)
		&.wp
			color: #E95151
.ctx
	position relative
	width 100%
	height 100%
p
	margin 0
	-webkit-margin-before: 0
	-webkit-margin-after: 0

.instruction
	width: 90px;
	height: 40px;
	margin: 3px;
	border: 1px solid #808080;
	box-sizing: border-box;
	background-color: #e8e8e8;
	display -webkit-inline-box	
	color: #000
	border-radius: 10px;
	padding 5px
	line-height: 16px;
	.addr
		font-size 9px
		line-height 7px
	.label
		position absolute
		bottom 0
		right 0
		left 0
		top 12px
		.type
			position absolute
			left 0
		.param
			position absolute
			right 0
	&.EOP
		background-color #444
		color #fff
